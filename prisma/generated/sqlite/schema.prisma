generator client {
  provider = "prisma-client-js"
  output   = "./generated/sqlite"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

model User {
  id              String     @id @default(uuid())
  email           String
  password        String
  name            String
  createdEmployee Employee[]
}

model Employee {
  id         String @id @default(uuid())
  firstName  String
  lastName   String
  age        String
  address    String
  user       User   @relation(fields: [userId], references: [id])
  userId     String
  date       String?
  days       String?
  warnings   String?
  reprimands String?
}

model Event {
  id        String @id @default(uuid())
  NickName  String
  Telegram  String
  Time      String
  NameEvent String
  Prize     String
  Status    String
}

model Feedback {
  id         String @id @default(uuid())
  Name       String
  Contact    String
  Suggestion String
}
